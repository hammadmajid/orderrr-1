---
export interface Props {
    title: string,
    description: string,
    src: string,
    alt: string,
}

const {title, description, src, alt} = Astro.props as Props;
---

<div class="rounded-[2rem] p-4 space-y-2 bg-white text-black flex flex-col justify-center items-start">
    <img src={src} alt={alt} class="rounded-[2rem]" />
    <h3 class="text-2xl">{title}</h3>
    <p>{description}</p>
</div>