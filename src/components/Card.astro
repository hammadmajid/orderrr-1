---
export interface Props {
    title: string,
    description: string,
    src: string,
    alt: string,
}

const {title, description, src, alt} = Astro.props as Props;
---

<div class="rounded-[2rem] p-4 space-y-4 bg-white text-black flex flex-col justify-items-start">
    <img src={src} alt={alt} class="rounded-[2rem] self-center w-full h-3/4 object-fill"/>
    <div class="self-start md:px-8">
        <h3 class="text-2xl">{title}</h3>
        <p>{description}</p>
    </div>
</div>