---
import BaseLayout from "@layouts/BaseLayout.astro";
import Form from "@components/Form.astro";
---

<BaseLayout title="The Beauty Hut | Face & Body Sculpting"
            description="The Beauty Hut | Face & Body Sculpting | Make your dream a reality">
    <main class="p-8 space-y-8">
        <h1 class="text-3xl md:text-5xl font-bold text-[#dfc998]">Make Your Dream a reality.</h1>
        <div class="flex flex-col lg:flex-row justify-between items-center space-y-12">
            <div class="lg:w-2/5">
                <Form/>
            </div>
            <div class="grid grid-cols-10 lg:w-1/2 p-12 lg:p-0">
                <img src="/skin.png" alt="Skin pattern of cheetah" id="skin-1"
                     class=""/>
                <img src="/women-1.png" alt="A happy and healthy women sitting on floor."
                     class="" id="women-1"/>
            </div>
        </div>
    </main>
</BaseLayout>

<style>
    #skin-1, #women-1 {
        grid-row: 1 / 2;
        border-radius: 2rem;
    }

    #women-1 {
        grid-column: 1 / 7;
        align-self: end;
        top: 2rem;
        position: relative;
    }

    #skin-1 {
        grid-column: 2 / -1;
    }
</style>